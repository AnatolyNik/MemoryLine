#:kivy 2.0.0

<MemoryButton>:
    font_size: 24
    background_color: 0.8, 0.8, 0.8, 1  # Серый фон по умолчанию
    color: 0, 0, 0, 1  # Черный текст
    canvas.before:
        Color:
            rgba: self.background_color # Цвет фона
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [12]  # Закругленные углы

<MemoryGrid>:
    cols: 4
    rows: 3
    spacing: 15  # Увеличиваем расстояние
    padding: 15  # Увеличиваем отступ
    canvas.before:
        Color:
            rgba: 0.95, 0.95, 0.95, 1  # Светло-серый фон
        Rectangle:
            pos: self.pos
            size: self.size